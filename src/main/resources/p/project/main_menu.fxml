<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<VBox spacing="20" alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1" fx:controller="p.project.Controllers.MainMenuController" style="
    -fx-background-color: #f8f9fa; /* Light white background for contrast */
    -fx-border-color: #dddddd;
    -fx-border-radius: 8px;
    -fx-background-radius: 8px;
    -fx-padding: 10px;
    -fx-font-family: 'Arial', sans-serif;
    -fx-font-size: 14px;
    -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.1), 10, 0, 0, 2);
    -fx-text-fill: #000000; /* Black text for visibility */
">
    <Button text="Place Order" onAction="#goToPlaceOrder" style="
    -fx-background-color: #4caf50; /* Green for buttons */
    -fx-background-radius: 20px;
    -fx-text-fill: white;
    -fx-padding: 10px 20px;
    -fx-font-size: 14px;
    -fx-font-family: 'Arial', sans-serif;
    -fx-cursor: hand;
    -fx-border-color: #3e8e41; /* Darker green border */
    -fx-border-radius: 20px;
    "/>

    <Button fx:id="manageAccountButton" text="Manage Account" onAction="#goToManageAccount" style="
    -fx-background-color: #ff9800; /* Orange for a distinct look */
    -fx-background-radius: 20px;
    -fx-text-fill: white;
    -fx-padding: 10px 20px;
    -fx-font-size: 14px;
    -fx-font-family: 'Arial', sans-serif;
    -fx-cursor: hand;
    -fx-border-color: #e65100; /* Darker orange border */
    -fx-border-radius: 20px;
    "/>

    <Button text="Generate Optimal List" onAction="#goToGenerateOptimalList" style="
        -fx-background-color: #2196F3; /* Blue for action */
        -fx-background-radius: 20px;
        -fx-text-fill: white;
        -fx-padding: 10px 20px;
        -fx-font-size: 14px;
        -fx-font-family: 'Arial', sans-serif;
        -fx-cursor: hand;
        -fx-border-color: #1976D2; /* Darker blue border */
        -fx-border-radius: 20px;
    "/>

    <Button fx:id="analysisButton" text="Analysis" onAction="#onAnalysisButtonClick" style="
    -fx-background-color: #FF00FF; /* Red for sign out */
    -fx-background-radius: 20px;
    -fx-text-fill: white;
    -fx-padding: 10px 20px;
    -fx-font-size: 14px;
    -fx-font-family: 'Arial', sans-serif;
    -fx-cursor: hand;
    -fx-border-color: #d32f2f; /* Darker red border */
    -fx-border-radius: 20px;
    "/>

    <Button text="Sign Out" onAction="#signOut" style="
    -fx-background-color: #f44336; /* Red for sign out */
    -fx-background-radius: 20px;
    -fx-text-fill: white;
    -fx-padding: 10px 20px;
    -fx-font-size: 14px;
    -fx-font-family: 'Arial', sans-serif;
    -fx-cursor: hand;
    -fx-border-color: #d32f2f; /* Darker red border */
    -fx-border-radius: 20px;
    "/>


</VBox>
