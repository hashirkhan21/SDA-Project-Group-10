<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="p.project.Controllers.OverviewController" spacing="10" alignment="CENTER" prefWidth="400" prefHeight="600" style="
    -fx-background-color: #f8f9fa; /* Light white background for contrast */
    -fx-border-color: #dddddd;
    -fx-border-radius: 8px;
    -fx-background-radius: 8px;
    -fx-padding: 10px;
    -fx-font-family: 'Arial', sans-serif;
    -fx-font-size: 14px;
    -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.1), 10, 0, 0, 2);
    -fx-text-fill: #000000; /* Black text for visibility */
">
    <ListView fx:id="cartListView" prefHeight="400" prefWidth="350"/>

    <Button fx:id="removeItemButton" text="Remove Selected Item" onAction="#removeSelectedItem" style="
    -fx-background-color: #4caf50; /* Green for buttons */
    -fx-background-radius: 20px;
    -fx-text-fill: white;
    -fx-padding: 10px 20px;
    -fx-font-size: 14px;
    -fx-font-family: 'Arial', sans-serif;
    -fx-cursor: hand;
    -fx-border-color: #3e8e41; /* Darker green border */
    -fx-border-radius: 20px;
    "/>
    <Button fx:id="proceedToCheckoutButton" text="Proceed to Checkout" onAction="#proceedToCheckout" style="
    -fx-background-color: #4caf50; /* Green for buttons */
    -fx-background-radius: 20px;
    -fx-text-fill: white;
    -fx-padding: 10px 20px;
    -fx-font-size: 14px;
    -fx-font-family: 'Arial', sans-serif;
    -fx-cursor: hand;
    -fx-border-color: #3e8e41; /* Darker green border */
    -fx-border-radius: 20px;
    "/>
    <Button fx:id="addMoreItemsButton" text="Add More Items" onAction="#addMoreItems" style="
    -fx-background-color: #4caf50; /* Green for buttons */
    -fx-background-radius: 20px;
    -fx-text-fill: white;
    -fx-padding: 10px 20px;
    -fx-font-size: 14px;
    -fx-font-family: 'Arial', sans-serif;
    -fx-cursor: hand;
    -fx-border-color: #3e8e41; /* Darker green border */
    -fx-border-radius: 20px;
    "/>
</VBox>