<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/javafx"
            fx:controller="p.project.Controllers.FeedbackController">
    <top>
        <HBox spacing="10" style="-fx-padding: 10; -fx-background-color: #f4f4f4;">
            <!-- Home Button aligned to the left edge -->
            <Button text="Home" fx:id="homeButton" style="-fx-font-size: 14px;" />
            <!-- Title centered -->
            <Label text="Feedback Management" style="-fx-font-size: 18px; -fx-font-weight: bold;" HBox.hgrow="ALWAYS" alignment="CENTER" />
        </HBox>
    </top>
    <center>
        <TableView fx:id="feedbackTable" prefWidth="800" style="-fx-padding: 10;">
            <columns>
                <TableColumn text="User ID" fx:id="userIDColumn" prefWidth="200" />
                <TableColumn text="Comments" fx:id="userCommentsColumn" prefWidth="400" />
                <TableColumn text="Actions" fx:id="actionsColumn" prefWidth="200" />
            </columns>
        </TableView>
    </center>
</BorderPane>
