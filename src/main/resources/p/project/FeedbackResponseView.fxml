<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="p.project.Controllers.FeedbackResponseController" alignment="CENTER" hgap="10" vgap="10">
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT"/>
        <ColumnConstraints halignment="LEFT"/>
    </columnConstraints>

    <!-- Admin Comments -->
    <Label text="Admin Comments:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="adminCommentsField" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="300"/>

    <!-- Status -->
    <Label text="Status:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="statusField" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="300"/>

    <!-- Priority (optional) -->
    <Label text="Priority:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="priorityField" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="300"/>

    <!-- Buttons -->
    <Button text="Home" fx:id="homeButton" GridPane.rowIndex="3" GridPane.columnIndex="0" alignment="CENTER" onAction="#handleHomeButtonClick"/>
    <Button text="Submit" fx:id="submitButton" GridPane.rowIndex="3" GridPane.columnIndex="1" alignment="CENTER" onAction="#handleSubmitButtonClick"/>
</GridPane>
