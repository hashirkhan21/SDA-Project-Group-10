<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="500" prefWidth="600" spacing="20" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="p.project.Controllers.CheckoutController" style="
    -fx-background-color: #f0f0f5; /* Light gray background for subtle contrast */
    -fx-border-color: #c8e6c9; /* Light green border */
    -fx-border-radius: 8px;
    -fx-background-radius: 8px;
    -fx-padding: 20px;
    -fx-font-family: 'Arial', sans-serif;
    -fx-font-size: 14px;
    -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.1), 10, 0, 0, 2);
    -fx-text-fill: #000000; /* Black text for default content */
">

    <Label text="Enter Your Delivery Address:" style="
    -fx-text-fill: #388e3c; /* Green text for headings */
    -fx-font-size: 16px;
    -fx-font-weight: bold;
    "/>
    <TextField fx:id="addressField" prefHeight="26.0" prefWidth="400.0" promptText="Address" style="
    -fx-background-color: #ffffff; /* White background for input fields */
    -fx-border-color: #c8e6c9; /* Light green border */
    -fx-border-radius: 8px;
    -fx-padding: 10px;
    "/>

    <Label text="Enter Your Phone Number:" style="
    -fx-text-fill: #388e3c; /* Green text for headings */
    -fx-font-size: 16px;
    -fx-font-weight: bold;
    "/>
    <TextField fx:id="phoneNumberField" promptText="Phone Number" style="
    -fx-background-color: #ffffff;
    -fx-border-color: #c8e6c9;
    -fx-border-radius: 8px;
    -fx-padding: 10px;
    "/>

    <Label text="Select Payment Method:" style="
    -fx-text-fill: #388e3c;
    -fx-font-size: 16px;
    -fx-font-weight: bold;
    "/>
    <RadioButton fx:id="codRadioButton" text="Cash on Delivery" style="
    -fx-text-fill: #50514f; /* Dark gray for radio button text */
    "/>
    <RadioButton fx:id="onlinePaymentRadioButton" text="Online Payment" style="
    -fx-text-fill: #50514f;
    "/>

    <VBox fx:id="cardDetailsBox" spacing="10" visible="false" style="
    -fx-background-color: #f9f9f9; /* Subtle white-gray for card details box */
    -fx-border-color: #dddddd;
    -fx-border-radius: 8px;
    -fx-background-radius: 8px;
    -fx-padding: 15px;
    ">
        <Label text="Enter Card Details:" style="
        -fx-text-fill: #388e3c;
        -fx-font-size: 14px;
        -fx-font-weight: bold;
        "/>
        <TextField fx:id="cardNumberField" promptText="Card Number" style="
        -fx-background-color: #ffffff;
        -fx-border-color: #c8e6c9;
        -fx-border-radius: 8px;
        -fx-padding: 10px;
        "/>
        <TextField fx:id="expiryDateField" promptText="Expiry Date (MM/YY)" style="
        -fx-background-color: #ffffff;
        -fx-border-color: #c8e6c9;
        -fx-border-radius: 8px;
        -fx-padding: 10px;
        "/>
        <PasswordField fx:id="cvvField" promptText="CVV" style="
        -fx-background-color: #ffffff;
        -fx-border-color: #c8e6c9;
        -fx-border-radius: 8px;
        -fx-padding: 10px;
        "/>
    </VBox>

    <Button onAction="#confirmOrder" text="Confirm Order" style="
    -fx-background-color: #4caf50; /* Vibrant green for buttons */
    -fx-background-radius: 20px;
    -fx-text-fill: white;
    -fx-padding: 10px 20px;
    -fx-font-size: 14px;
    -fx-font-family: 'Arial', sans-serif;
    -fx-cursor: hand;
    -fx-border-color: #388e3c; /* Darker green border */
    -fx-border-radius: 20px;
    "/>

</VBox>
