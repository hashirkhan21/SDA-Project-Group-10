<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="501.0" prefWidth="505.0" spacing="20" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="p.project.Controllers.CustomListController" style="
    -fx-background-color: #f8f9fa; /* Light white background for contrast */
    -fx-border-color: #dddddd;
    -fx-border-radius: 8px;
    -fx-background-radius: 8px;
    -fx-padding: 10px;
    -fx-font-family: 'Arial', sans-serif;
    -fx-font-size: 14px;
    -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.1), 10, 0, 0, 2);
    -fx-text-fill: #000000; /* Black text for visibility */
">
    <Label styleClass="label" text="Select a Shop" style="
    -fx-background-color: #f8f9fa; /* Light white background for contrast */
    -fx-border-color: #dddddd;
    -fx-border-radius: 8px;
    -fx-background-radius: 8px;
    -fx-padding: 10px;
    -fx-font-family: 'Arial', sans-serif;
    -fx-font-size: 14px;
    -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.1), 10, 0, 0, 2);
    -fx-text-fill: #000000; /* Black text for visibility */
    "/>
    <ComboBox fx:id="shopComboBox" onAction="#loadItemsForShop" promptText="Select a Shop" styleClass="combo-box" />

    <!-- Dynamic list of items -->
    <ScrollPane fitToWidth="true" styleClass="scroll-pane">
        <VBox fx:id="itemListVBox" alignment="CENTER" spacing="10" style="
    -fx-background-color: #f8f9fa; /* Light white background for contrast */
    -fx-border-color: #dddddd;
    -fx-border-radius: 8px;
    -fx-background-radius: 8px;
    -fx-padding: 10px;
    -fx-font-family: 'Arial', sans-serif;
    -fx-font-size: 14px;
    -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.1), 10, 0, 0, 2);
    -fx-text-fill: #000000; /* Black text for visibility */
">
            <!-- Items dynamically added here -->
        </VBox>
    </ScrollPane>

    <Button onAction="#proceedToOverview" styleClass="button" text="Proceed to Overview" style="
    -fx-background-color: #4caf50; /* Green for buttons */
    -fx-background-radius: 20px;
    -fx-text-fill: white;
    -fx-padding: 10px 20px;
    -fx-font-size: 14px;
    -fx-font-family: 'Arial', sans-serif;
    -fx-cursor: hand;
    -fx-border-color: #3e8e41; /* Darker green border */
    -fx-border-radius: 20px;
    "/>
</VBox>