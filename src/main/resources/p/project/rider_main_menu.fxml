<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" alignment="CENTER" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="p.project.Controllers.RiderMainMenuController" style="
      -fx-background-color: #f8f9fa; /* Light white background */
      -fx-padding: 20;
      -fx-font-family: 'Arial', sans-serif;
      -fx-font-size: 14px;">

    <Button text="Make Delivery" onAction="#goToMakeDelivery" style="
        -fx-background-color: #4caf50; /* Green button */
        -fx-text-fill: white;
        -fx-font-size: 16px;
        -fx-background-radius: 10px;
        -fx-padding: 10px 20px;
        -fx-cursor: hand;
        "/>

    <Button text="Complete Delivery" onAction="#goToCompleteDelivery" style="
        -fx-background-color: #007bff; /* Blue button */
        -fx-text-fill: white;
        -fx-font-size: 16px;
        -fx-background-radius: 10px;
        -fx-padding: 10px 20px;
        -fx-cursor: hand;
        "/>

    <Button text="Sign Out" onAction="#signOut" style="
    -fx-background-color: #f44336; /* Red for sign out */
    -fx-background-radius: 20px;
    -fx-text-fill: white;
    -fx-padding: 10px 20px;
    -fx-font-size: 14px;
    -fx-font-family: 'Arial', sans-serif;
    -fx-cursor: hand;
    -fx-border-color: #d32f2f; /* Darker red border */
    -fx-border-radius: 20px;
    "/>
</VBox>
