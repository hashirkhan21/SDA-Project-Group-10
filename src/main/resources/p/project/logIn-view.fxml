<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="p.project.Controllers.logINController"
      stylesheets="@style.css">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Login Form" styleClass="title-label"/>

    <GridPane hgap="10" vgap="15" alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints minWidth="80" prefWidth="100"/>
            <ColumnConstraints minWidth="200" prefWidth="250"/>
        </columnConstraints>

        <!-- Email Field -->
        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="emailField" promptText="Enter your email"
                   GridPane.columnIndex="1" GridPane.rowIndex="0"
                   styleClass="email-field"/>

        <!-- Password Field -->
        <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <PasswordField fx:id="passwordField" promptText="Enter your password"
                       GridPane.columnIndex="1" GridPane.rowIndex="1"
                       styleClass="password-field"/>
    </GridPane>

    <!-- Sign-Up Link -->
    <Hyperlink fx:id="signUpLink" text="Don't have an account? Sign up instead"
               styleClass="hyperlink" onAction="#onSignUpLinkClick"/>

    <!-- Login Button -->
    <Button fx:id="logInButton" text="Login"
            styleClass="login-button" onAction="#onLogInButtonClick"/>
</VBox>