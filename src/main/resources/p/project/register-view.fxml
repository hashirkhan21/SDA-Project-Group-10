<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="p.project.Controllers.registerController"
      stylesheets="@style.css">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Register Account" styleClass="title-label">
        <font>
            <Font size="24" name="System Bold"/>
        </font>
    </Label>

    <GridPane hgap="10" vgap="15" alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints minWidth="80" prefWidth="100"/>
            <ColumnConstraints minWidth="200" prefWidth="250"/>
        </columnConstraints>

        <!-- Account Type Dropdown -->
        <Label text="Account Type:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <ComboBox fx:id="accountTypeComboBox"
                  GridPane.columnIndex="1" GridPane.rowIndex="0"
                  prefWidth="250"/>

        <!-- Name Field -->
        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="nameField" promptText="Enter your full name"
                   GridPane.columnIndex="1" GridPane.rowIndex="1"
                   styleClass="text-field"/>

        <!-- Email Field -->
        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="emailField" promptText="Enter your email"
                   GridPane.columnIndex="1" GridPane.rowIndex="2"
                   styleClass="text-field"/>

        <!-- Password Field -->
        <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <PasswordField fx:id="passwordField" promptText="Enter your password"
                       GridPane.columnIndex="1" GridPane.rowIndex="3"
                       styleClass="password-field"/>

        <!-- Phone Number Field -->
        <Label text="Phone Number:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="phoneNumberField" promptText="Enter your phone number"
                   GridPane.columnIndex="1" GridPane.rowIndex="4"
                   styleClass="text-field"/>
    </GridPane>

    <!-- Register Button -->
    <Button fx:id="registerButton" text="Register"
            onAction="#onRegisterButtonClick"
            styleClass="login-button"/>

    <!-- Login Link -->
    <Hyperlink fx:id="loginLink" text="Already have an account? Log in"
               onAction="#onLoginLinkClick"/>
</VBox>